<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fitmgr.admin.mapper.FunctionMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.fitmgr.admin.api.entity.Function">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="menu_id" property="menuId"/>
        <result column="resource_id" property="resourceId"/>
        <result column="date_scope" property="dateScope"/>
        <result column="function_code" property="functionCode"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="del_flag" property="delFlag"/>
        <result column="api_url" property="apiUrl"/>
        <result column="http_method" property="httpMethod"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, menu_id, resource_id,date_scope, function_code, create_time, update_time, del_flag, api_url, http_method
    </sql>


    <select id="getRoleFunction" resultType="com.fitmgr.admin.api.entity.Function">
        SELECT
        f.id,
        f.NAME,
        f.menu_id,
        f.function_code,
        f.create_time,
        f.update_time,
        f.api_url,
        f.http_method,
        fa.del_flag
        FROM
        `function` f,
        auth fa
        WHERE
        f.id = fa.function_id
        AND f.menu_id = #{menuId}
        AND fa.role_id=#{roleId}
    </select>

</mapper>
