<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fitmgr.admin.mapper.TenantTypeMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.fitmgr.admin.api.entity.TenantType">
        <id column="id" property="id" />
        <result column="type_name" property="typeName" />
        <result column="description" property="description" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="is_limit" property="isLimit" />
    </resultMap>

    <!-- tenantTypeVO查询映射结果 -->
    <resultMap id="TenantTypeVoResultMap" type="com.fitmgr.admin.api.vo.TenantTypeVO">
        <id column="id" property="id" />
        <result column="type_name" property="typeName" />
        <result column="description" property="description" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="is_limit" property="isLimit" />
    </resultMap>

    <!-- tenantResource查询映射结果 -->
    <resultMap id="tenantResourceResultMap" type="com.fitmgr.admin.api.entity.TenantTypeResourcePool">
        <id column="id" property="id" />
        <result column="tenant_type_id" property="tenantTypeId" />
        <result column="resource_type_id" property="resourceTypeId" />
        <result column="resource_pool_id" property="resourcePoolId" />
        <result column="status" property="status" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, type_name, description, create_time, update_time,is_limit
    </sql>
    <select id="listPage" resultType="com.fitmgr.admin.api.vo.TenantTypeVO">
        select
        <include refid="Base_Column_List"></include>
        from tenant_type
        where del_flag = 0
        order by create_time desc
    </select>

</mapper>
