    </resultMap>
    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        meterage_id, start_time, end_time, tenant_id, project_id, user_id, cmp_instance_name, component_code, data, order_id, del_flag, remark_flag
    </sql>

    <select id="getMeterageList" parameterType="com.fitmgr.meterage.api.entity.ResourceMeterageRecord"
            resultMap="ResourceMeterageRecordListListVO">
        select
        <include refid="Base_Column_List"/>
        from
        resource_meterage_record
        <where>
            <if test="resourceMeterageRecordVO.componentCode != null and resourceMeterageRecordVO.componentCode != ''">
                AND component_code=#{resourceMeterageRecordVO.componentCode}
            </if>
            <if test="resourceMeterageRecordVO.projectId != null and resourceMeterageRecordVO.projectId != ''">
                AND project_id=#{resourceMeterageRecordVO.projectId}
            </if>
            <if test="resourceMeterageRecordVO.tenantId != null and resourceMeterageRecordVO.tenantId != ''">
                AND tenant_id=#{resourceMeterageRecordVO.tenantId}
            </if>
            <if test="resourceMeterageRecordVO.tenantIds !=null">
                AND tenant_id in
                <foreach collection="resourceMeterageRecordVO.tenantIds" item="item" index="index" open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>
            <if test="resourceMeterageRecordVO.projects != null and resourceMeterageRecordVO.projects.size>0 and resourceMeterageRecordVO.tenantIds !=null">
                or project_id in
                <foreach collection="resourceMeterageRecordVO.projects" index="index" item="id" open="(" separator="," close=")">
                    #{id}
                </foreach>
            </if>
            <if test="resourceMeterageRecordVO.projects != null and resourceMeterageRecordVO.projects.size>0">
                AND project_id in
                <foreach collection="resourceMeterageRecordVO.projects" index="index" item="id" open="(" separator="," close=")">
                    #{id}
                </foreach>
            </if>
            <if test="resourceMeterageRecordVO.startTime != null">
                and start_time <![CDATA[ >= ]]> #{resourceMeterageRecordVO.startTime}
            </if>
            <if test="resourceMeterageRecordVO.endTime != null">
                and start_time <![CDATA[ <= ]]> #{resourceMeterageRecordVO.endTime}
            </if>
        </where>
        order by start_time desc
    </select>

